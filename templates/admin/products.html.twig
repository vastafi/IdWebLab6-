{% extends 'base.html.twig' %}

{% block title %} Products {% endblock %}


{% block body %}
    <header class="section-header">
        <nav class="navbar-expand-sm navbar-dark bg-secondary fixed-top">
            <div class="container">
                <div class="row">
                    <div style="float:left">
                        <ul class="navbar-nav d-flex ">
                            <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <section class="header-main py-md-5"></section>
    <h1 class="logo-text" align="center">SimpleStore</h1>
    <div style="float:right">
        <form action="#">
            <label>
                <input type="text" placeholder="Search.." name="search">
            </label>
            <button type="submit">Submit</button>
        </form>
    </div>
    <table class="table">
        <th scope="col">
            <ul class="list-group">
                <h4 align="center">Category</h4>
                <li class="list-group-item"><a class="nav-link" href="#">CategoriaA</a></li>
                <li class="list-group-item"><a class="nav-link" href="#">CategoriaB</a></li>
                <li class="list-group-item"><a class="nav-link" href="#">CategoriaC</a></li>
                <li class="list-group-item"><a class="nav-link" href="#">CategoriaD</a></li>
                <li class="list-group-item"><a class="nav-link" href="#">CategoriaE</a></li>
            </ul>
        </th>

        <th scope="col">
            <div class="container">
                <nav>
                    <ul class="pagination" style="float:right">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <h1 class="mt-4 mb-5" align="center">Products</h1>

                <div class="row">

                    {% for product in products %}
                        <div class="col-md-3">
                            <div class="card mb-3">
                                <img src="https://via.placeholder.com/250x200" alt="{{ product.name }}"
                                     class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text">{{ product.description }}</p>
                                    <div class="d-flex justify-content-between align-item-center">
                                        <a href="#" class="btn btn-dark">View details</a>
                                        <span class="h5 mt-auto">{{ product.price }} $</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% endfor %}

                </div>
                <nav>
                    <ul class="pagination" style="float:right">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </th>
    </table>

    <!-- footer -->
    <footer class="section-footer bg-secondary">
        <section class="footer-bottom row border-top-white">
            <div class="col-sm-12 col-md-12 col-xl-6 col-lg-6">
                <p class=" text-md-left text-dark-50"> By: S.S </br>
                 SimpleStore</p>
                </p>
            </div>
            <div class="col-sm-12 col-md-12 col-xl-6 col-lg-6">
                <p class="text-md-right text-black-50">
                    Phone: +333 333 333 <br> Fax: 03333333333
                </p>
            </div>
        </section>
    </footer>
    <!-- footer end -->

{% endblock %}